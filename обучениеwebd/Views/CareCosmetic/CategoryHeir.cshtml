<div>
    <h2 class="h2_margin">Категория товаров @Model.AllCategories[0].CategoryName</h2>
    <div>
        @{foreach (var cosmetic in Model.AllCareCosmetics)
            {
                if (cosmetic.Category == Model.AllCategories[0].CategoryName)
                {
                    <h3>@cosmetic.CosmeticName</h3>
                    <p>Цена: @cosmetic.Price</p>
                    <p><img class="img-thumbnail" scr="@cosmetic.Img"></p>
                }
            }
        }
    </div>
    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @{foreach (var cosmetic in Model.AllCareCosmetics)
                    {
                        if (cosmetic.Category == Model.AllCategories[0].CategoryName)
                        {
                        <div class="col">
                            <div class="card shadow-sm">
                                <img class="bd-placeholder-img card-img-top" src="https://avatars.mds.yandex.net/get-mpic/5173454/img_id6577925693647797144.jpeg/orig" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Заполнитель: миниатюра" preserveAspectRatio="xMidYMid slice" focusable="false" _mstaria-label="4468347" _mstHash="18" style="direction: ltr; text-align: left;">
                                <div class="card-body">
                                    <h3>@cosmetic.CosmeticName</h3>
                                    <p class="card-text" _msttexthash="125699210" _msthash="21" style="direction: ltr; text-align: left;">Это более широкая карточка с вспомогательным текстом ниже в качестве естественного введения в дополнительный контент. Этот контент немного длиннее.</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary" _msttexthash="799227" _msthash="22" style="direction: ltr;">Подробнее</button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary" _msttexthash="1402778" _msthash="23" style="direction: ltr;">модуляция</button>
                                        </div>
                                        <small class="text-body-secondary" _msttexthash="711386" _msthash="24" style="direction: ltr; text-align: left;">Цена: @cosmetic.Price</small>
